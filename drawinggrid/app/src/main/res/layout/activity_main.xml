<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:orientation="vertical"
    android:weightSum="1"
    app:useDefaultMargins="true">



    
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:weightSum="1">


        <TextView

            android:text="Drawing Grid"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_row="0" />


        <TextView
            android:text="Open:"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/selFileButton"
            android:text="File"
            app:layout_column="1"
            app:layout_columnWeight="5"
            app:layout_row="2"
            app:layout_rowSpan="1" />

        <CheckBox
            android:id="@+id/rotateCbox"
            android:text="Rotate"
            app:layout_column="0"
            app:layout_columnSpan="5"
            app:layout_columnWeight="5"
            app:layout_row="3" />

        <CheckBox
            android:id="@+id/squareCbox"
            android:text="Square"
            app:layout_column="0"
            app:layout_columnSpan="5"
            app:layout_columnWeight="5"
            app:layout_row="4" />

        <CheckBox
            android:id="@+id/coordCBox"
            android:text="Show Coordinates"
            app:layout_column="0"
            app:layout_columnSpan="5"
            app:layout_columnWeight="5"
            app:layout_row="5" />

        <TextView
            android:text="Size:"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="6" />

        <EditText
            android:id="@+id/gridSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="Grid Size"
            app:layout_column="1"
            app:layout_columnWeight="5"
            app:layout_row="6" />


        <com.github.lindenb.android.apps.drawinggrid.DrawGridView
            android:layout_width="wrap_content"
            app:layout_column="0"
            app:layout_row="7"
            app:layout_rowWeight="10" />


    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="0px"
        android:background="#0000ff"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello world"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>